@{
    ViewBag.Title = "Home Page";
}

<style>
    div.a {
        width: 400px;
        min-height: 200px;
        border: 1px solid red;
    }

    .messages-area {
        margin:10px;
        width: 300px;
        min-height: 120px;
        border: 1px solid blue;
    }

    .messagebox{
        margin:10px;
    }

    .btn{
        margin-left:10px;
        outline:none;
    }
    
    .btn:focus{
        
        outline:none;
    }
    
</style>

    <div class="a">
        <div id="message-area" class="messages-area"></div>
        <textarea class="messagebox" id="message" placeholder="Enter your Message"></textarea>
        <br/>
        <button  id="btnsend" class="btn">Send</button>
    </div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/js"></script>
    <script src="~/Scripts/SignalR.js"></script>
}


